	journal = {Global Change Biology},
	author = {Binzer, Amrei and Guill, Christian and Rall, Björn C. and Brose, Ulrich},
	year = {2016},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/gcb.13086},
