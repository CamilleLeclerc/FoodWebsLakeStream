	pages = {e0200066},
	file = {Full Text PDF:/home/alain/.mozilla/firefox/sf9zmf9b.default/zotero/storage/GAFD3EHE/Mendonça et al. - 2018 - What's in a tide pool Just as much food web netwo.pdf:application/pdf;Snapshot:/home/alain/.mozilla/firefox/sf9zmf9b.default/zotero/storage/FDBMZGQ7/article.html:text/html},
