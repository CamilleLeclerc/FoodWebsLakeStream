	note = {Publisher: Public Library of Science},
	keywords = {Biomass, Food web structure, Marine ecosystems, Food, Cyanobacteria, Energy flow, Herbivory, Mesocosms},
	pages = {e2003446},
	file = {Full Text PDF:/home/alain/.mozilla/firefox/sf9zmf9b.default/zotero/storage/XUZMJT5N/Ullah et al. - 2018 - Climate change could drive marine food web collaps.pdf:application/pdf;Snapshot:/home/alain/.mozilla/firefox/sf9zmf9b.default/zotero/storage/JCIYA66W/article.html:text/html},
